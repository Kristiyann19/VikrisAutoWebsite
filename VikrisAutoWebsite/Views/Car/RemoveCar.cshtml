@using VikrisAutoWebsite.Core.Models
@model IEnumerable<CarViewModel>

<div class="content">
    <div class="text-center row">
        @foreach (var car in Model)
        {
            
            <div class="card col-md-3" onclick="location.href='@Url.Action("CarById", "Car", new {carId = car.Id})';" style="cursor: pointer;">
                <div class="row">
                    <div class="col-md-12">
                        @if (car.Images.Any())
                        {
                            <img src="@Url.Content(car.Images.Last().FilePath)" alt="Car Image" class="card-img-top" />
                        }
                    </div>

                    <div class="col-md-12">
                        <div class="card-body">
                            <h5 class="card-title mt-1">@car.Make @car.Model @car.ShortInfo</h5>
                            <p class="card-text">@car.Price лева</p>
                            <p class="card-text">Година: @car.Year</p>                       
                            <p class="card-text">Двигател: @car.Engine</p>
                            <p class="card-text">Кутия: @car.Gearbox</p>
                        </div>
                        <form class="input-group-sm" asp-controller="Car" asp-action="RemoveCar" asp-route-carId="@car.Id">
                        <input type="submit" value="Delete" class="fs-6 btn btn-danger mb-3 p-2" />
                    </form> 
                    </div>
                </div>
            </div>
        } 
    </div>   
    </div>
